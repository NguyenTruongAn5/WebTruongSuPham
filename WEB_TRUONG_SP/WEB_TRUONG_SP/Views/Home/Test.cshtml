<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ASP.NET MVC JavaScript Example</title>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- Content -->
    <div id="content">
        <h1>ASP.NET MVC JavaScript Example</h1>
        <input type="submit" name="submit" value="click" onclick="fun()"/>
    </div>

    <!-- Scripts Section -->
    @section scripts {
        <script>
            function fun() {
                alert("Button clicked!");
            }
        </script>
    }
</body>
</html>
