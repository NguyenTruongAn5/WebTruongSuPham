<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Content/CSS/Bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/CSS/Header/HD_Language.css" rel="stylesheet" />
    <link href="~/Content/CSS/Header/HD_Navbar_Custom.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/CSS/Body/BD_Main.css" rel="stylesheet" />
    <link href="~/Content/CSS/Header/Banner.css" rel="stylesheet" />
    <link href="~/Content/CSS/Footer.css" rel="stylesheet" />

    <link href="~/Content/CSS/Body/BD_SubIndex.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Content/JS/JS_Banner.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div class="top-bar">
            <div class="language-options">
                <a href="@Url.Action("Index","Account")">
                    Đăng nhập
                    <i class="fa fa-sign-in"></i>
                </a>
                @if (TempData["Admin"] as string == "Admin")
                {
                    <a href="@Url.Action("Index", "Home", new { area = "Admin" })">
                        Admin Setting
                        <i class="fa fa-user-secret"></i>
                    </a>
                }
                <a href="#">
                    <img src="https://www.dthu.edu.vn/img/vn.gif" alt="Quốc kỳ Việt Nam" class="flag">
                    VN
                </a>
                <a href="#">
                    <img src="https://www.dthu.edu.vn/img/en.gif" alt="Quốc kỳ Anh" class="flag">
                    EN
                </a>
            </div>
        </div>
        <div class="logo-bar">
            <a href=@Url.Action("Index","Home")>
                <img src="~/Content/IMG/logo.png" alt="Logo" class="logo">
            </a>
        </div>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <ul class="navbar-nav mr-auto">
                    @if (ViewBag.Menu != null && ViewBag.SubMenu != null)
                    {
                        foreach (var item in ViewBag.Menu)
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="@Url.Action("SubIndex","Home", new {id=item.ID})">
                                    @item.Name <i class="fa fa-chevron-down"></i>
                                </a>
                                @foreach (var itemSubMenu in ViewBag.SubMenu)
                                {
                                    if (itemSubMenu.MenuID == item.ID)
                                    {
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item"
                                                   href="@Url.Action("SubIndex","Home", new {id=item.ID, idSub = itemSubMenu.ID})">
                                                    @itemSubMenu.Name
                                                </a>
                                            </li>
                                        </ul>
                                    }
                                }
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-9"></div>
                <div class="col-sm-3 header-section">
