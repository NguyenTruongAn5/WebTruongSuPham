<div class="container-fluid top-margin">
    <div class="row custom-background">
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <p class="title-p">TIN TỨC VÀ SỰ KIỆN NỔI BẬT</p>
        @foreach (var item in ViewBag.NewsActi)
        {
            <div class="col-4 custom-box">
                <a href="#">
                    @if (item.ImagePath != null)
                    {
                        <img src=@Url.Content(item.ImagePath) class="custom-img" />
                    }
                    else
                    {
                        <img src="~/Content/IMG/Logo_Square.png" class="custom-img" />
                    }
                    <div class="bg-custom-box">
                        <p>@item.Title</p>
                        <span>@Html.Raw(@item.Summary)</span>
                    </div>
                    <div class="date-custom">
                        <div>
                            <i class="fa fa-calendar">@item.PublishDate</i>
                        </div>
                    </div>
                </a>
            </div>
        }
        <a class="btn" href="@Url.Action("PageSyctheticActivity","Home", new {type="Hoạt động"})">Xem thêm >>></a>
    </div>
</div>

